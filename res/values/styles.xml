<resources>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:windowExitAnimation">@anim/activity_translate_out</item>
    </style>
	
	<style name="PopupAnimation1" parent="android:Animation" mce_bogus="1">          
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>     
        <item name="android:windowExitAnimation">@anim/popup_exit</item>     
    </style> 
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@drawable/frame_dialog</item>
    </style>
    
      <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/translucent</item>
    </style>
    
      <style name="csy_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/csy_row_h</item>
        <item name="android:paddingLeft">@dimen/csy_pd</item>
    </style>

    <style name="csy_row1" parent="csy_row">
        <item name="android:background">@drawable/csy_form_row</item>
    </style>

    <style name="csy_row_label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_label_w</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_label</item>
    </style>

    <style name="csy_textbox">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_text</item>
        <item name="android:textColorHint">@color/csy_hint</item>
        <item name="android:background">@drawable/csy_textbox</item>
        <item name="android:textSize">@dimen/csy_text_ts</item>
    </style>

    <style name="csy_textbox1" parent="csy_textbox">
        <item name="android:layout_marginRight">@dimen/csy_icon_w</item>
    </style>

    <style name="csy_row_icon">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_icon_w</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
    </style>
     <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>
    
</resources>